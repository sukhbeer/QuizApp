<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="@drawable/login_background"
    tools:context="com.example.android.quiz.OpenApp">

    <TextView
        android:id="@+id/textView2"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:fontFamily="cursive"
        android:gravity="center_horizontal"
        android:text="@string/enterN"
        android:textColor="#000000"
        android:textSize="35sp"
        android:textStyle="bold"
        />

    <EditText
        android:id="@+id/name"
        android:layout_width="200dp"
        android:layout_height="44dp"
        android:layout_below="@+id/textView2"
        android:layout_centerHorizontal="true"
        android:layout_marginTop="117dp"
        android:background="#9bde901b"
        android:drawableLeft="@drawable/ic_user_24dp"
        android:drawablePadding="8dp"
        android:drawableStart="@drawable/ic_user_24dp"
        android:hint="@string/nam"
        android:inputType="textCapWords"
        android:textColorHint="@android:color/black" />


    <Button
        android:id="@+id/openNext"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_alignParentBottom="true"
        android:layout_centerHorizontal="true"
        android:layout_gravity="bottom"
        android:layout_marginBottom="86dp"
        android:text="@string/strt" />
</RelativeLayout>
